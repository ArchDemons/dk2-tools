struct VariableData {
	VariableType variableId;
	switch (variableId) {
        case CREATURE_POOL:
            struct {
			    int creatureId;
			    int value;
			    int playerId;
		    } creaturePool;
            break;
        case AVAILABILITY:
            struct {
			    AvailabilityType type;
			    ushort playerId;
			    int typeId;
			    AvailabilityValue value;
		    } availability;
            break;
        case SACRIFICES_ID:
            struct {
			    ubyte type1;
			    ubyte id1;
			    ubyte type2;
			    ubyte id2;
			    ubyte type3;
			    ubyte id3;
			    SacrificeRewardType rewardType;
			    ubyte speechId;
			    int rewardValue;
		    } sacrifice;
            break;
        case CREATURE_STATS_ID:
        case CREATURE_FIRST_PERSON_ID:
            struct {
		        StatType stat;
		        int value;
		        int level;
	        } creatureStatistics;
            break;
        default:
            struct {
		        int value;
		        int unknown1;
		        int unknown2;
	        } unknown;
            break;
    }
};
