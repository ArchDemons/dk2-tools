typedef struct {
    byte UNK_1 : 1; // separate pictures?
    byte PLAYER_COLOURED : 1;
    byte ANIMATING_TEXTURE : 1;
    byte HAS_START_ANIMATION : 1;
    byte HAS_END_ANIMATION : 1;
    byte RANDOM_START_FRAME : 1;
    byte ORIGIN_AT_BOTTOM : 1;
    byte DOESNT_LOOP : 1;
    byte FLAT : 1;
    byte DOESNT_USE_PROGRESSIVE_MESH : 1;
	byte UNK_2 : 1; // 0x0400
	byte none_1 : 1;
	byte none_2 : 1;
	byte none_3 : 1;
	byte none_4 : 1;
	byte UNK_3 : 1; // 0x8000
    byte USE_ANIMATING_TEXTURE_FOR_SELECTION : 1;
    byte PRELOAD : 1;
    byte BLOOD : 1;
	byte none;
} ArtResourceFlag;

enum <ubyte> Type {
    NONE = 0,
    SPRITE = 1,
    ALPHA = 2,
    ADDITIVE_ALPHA = 3,
    TERRAIN_MESH = 4,
    MESH = 5,
    ANIMATING_MESH = 6,
    PROCEDURAL_MESH = 7,
    MESH_COLLECTION = 8,
    UNK_1 = 12
};

struct ArtResource {
  char name[64];
  ArtResourceFlag flags; /* 0 */
  union {
    struct {
		float32 width; /* fixed */
		float32 height; /* fixed */
		ushort frames;
    } image;
    struct {
		float32 scale;
		ushort frames;
    } mesh;
    struct {
		float32 frames; /* 4 */
		float32 fps; /* 8 */
		ushort start_dist; /* c */
		ushort end_dist; /* e */
    } anim;
    struct {
		uint id;
    } proc;
    struct {
		uint unk_1; // x00
		uint unk_2; // x04
		ubyte frames;
    } terrain;
  } data;
  Type type; /* 10 */
  ubyte start_af; /* 11 */
  ubyte end_af; /* 12 */
  ubyte sometimes_one; /* 13 */
};
